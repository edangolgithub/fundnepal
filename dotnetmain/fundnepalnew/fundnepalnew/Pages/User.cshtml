@page
@model UserModel
@using System.Net.Http
@using Newtonsoft.Json
@{
    ViewData["Title"] = "user";
}
<h2>Data from User Inventory Table</h2>

<p>
    @{
        List<Inventory> ulist = new List<Inventory>();
          using (var client = new HttpClient())
        {
            client.BaseAddress = new Uri("https://5w9ovuk4sh.execute-api.us-east-1.amazonaws.com/api/inventory");
            //HTTP GET
            var responseTask = client.GetAsync("");
            responseTask.Wait();

            var result = responseTask.Result;
            var userdata= await result.Content.ReadAsStringAsync();
            ulist = JsonConvert.DeserializeObject<List<Inventory>>(userdata);
        }
        
    }
   
<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Profile</th>
                <th>Access</th>
            </tr>
        </thead>
        <tbody>
          
      
    @{
        foreach (Inventory item in ulist)
        {
              <tr>
                <td>@item.Id</td>
                <td>@item.Serial</td>
                <td>@item.Site</td>
                <td>@item.User</td>
            </tr>
        }
    }
         
        </tbody>
    </table>
</div>
</p>
